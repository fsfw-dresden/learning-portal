FROM debian:bookworm

# Install build dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    debhelper \
    devscripts \
    dh-python \
    python3-all \
    python3-setuptools \
    python3-hatchling \
    python3-pyqt5 \
    python3-yaml \
    python3-pillow \
    python3-platformdirs \
    nodejs \
    npm \
    qttools5-dev-tools \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /build
